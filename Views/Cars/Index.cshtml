@model IEnumerable<WebApplication1.Models.Car>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Cars</h2>
    <a href="/Cars/Create" class="btn btn-primary">Add Car</a>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var car in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-wrapper" style="height: 200px; overflow: hidden; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center; position: relative;">
                        @if (!string.IsNullOrEmpty(car.ImageUrl))
                        {
                            <img src="@car.ImageUrl" alt="@car.Model" class="card-img-top" style="object-fit: cover; width: 100%; height: 100%;" 
                                 onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                 loading="lazy"
                                 referrerpolicy="no-referrer">
                            <div class="w-100 h-100 d-none align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-size: 3rem; position: absolute; top: 0; left: 0;">
                                ðŸš—
                            </div>
                        }
                        else
                        {
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-size: 3rem;">
                                ðŸš—
                            </div>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.Model</h5>
                        <div class="mb-2">
                            <span class="badge bg-primary">@car.Brand?.Name</span>
                            <span class="badge bg-secondary">@car.Category?.Name</span>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Year: </small><strong>@car.Year</strong>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Price: </small><strong class="text-success">$@car.Price.ToString("N2")</strong>
                        </div>
                        <div class="mb-2">
                            @if (car.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Not Available</span>
                            }
                        </div>
                        <div class="mt-auto pt-3">
                            <div class="btn-group w-100" role="group">
                                <a href="/Cars/Edit/@car.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/Cars/Delete/@car.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No cars found</h4>
        <p>Get started by adding your first car!</p>
        <a href="/Cars/Create" class="btn btn-primary">Add Car</a>
    </div>
}
